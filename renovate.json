{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)",
    "group:allNonMajor",
    ":automergePatch",
    ":automergeMinor",
    ":semanticCommits"
  ],
  "hostRules": [
    {
      "matchHost": "registry.green-rabbit.net:5000"
    }
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**"
  ],
  "labels": [
    "renovate",
    "dependencies"
  ],
  "packageRules": [
    {
      "enabled": false,
      "matchPackagePatterns": [
        "local_playwright"
      ],
      "matchPaths": [
        ".gitlab-ci.yml"
      ]
    },
    {
      "automerge": true,
      "description": "Python patch updates",
      "groupName": "Python patch updates",
      "matchManagers": [
        "pip_requirements",
        "pip_setup"
      ],
      "matchUpdateTypes": [
        "patch"
      ]
    },
    {
      "automerge": true,
      "description": "npm patch updates",
      "groupName": "npm patch updates",
      "matchManagers": [
        "npm"
      ],
      "matchUpdateTypes": [
        "patch"
      ]
    },
    {
      "automerge": true,
      "description": "Critical security updates",
      "matchDatasources": [
        "npm",
        "pypi"
      ],
      "matchPackagePatterns": [
        "^@angular/"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "prPriority": 10
    }
  ],
  "postUpdateOptions": [
    "npmDedupe",
    "yarnDedupeHighest"
  ],
  "prConcurrentLimit": 3,
  "prCreation": "not-pending",
  "schedule": [
    "every weekend"
  ],
  "vulnerabilityAlerts": {
    "automerge": true,
    "labels": [
      "security"
    ],
    "prPriority": 20
  }
}
